{
  "$schema": "../gen/schemas/remote-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with remote domain access",
  "windows": ["main", "about", "update", "settings"],
  "remote": {
    "urls": [
      "https://weread.qq.com/*",
      "https://*.weread.qq.com/*",
      "http://localhost.weixin.qq.com:*"
    ]
  },
  "permissions": [
    "core:default",
    "core:webview:default",
    "opener:default",
    "store:default",
    "window-state:default",
    "log:default",
    "shell:allow-open",
    "core:event:default",
    "core:window:default",
    "core:window:allow-set-size",
    "updater:default"
  ]
}
